<h1><%= @resource.name %></h1>
<ul>
  <li><strong>Link:</strong> <%= markdown(@resource.link) %></li>
  <li><strong>Description:</strong></li>
  <li><%= markdown(@resource.description) %></li>
</ul>
<ul>
  <li><%= link_to "Edit", edit_admin_resource_path(@resource) %></li>
  <li><%= link_to "Destroy", admin_resource_url(@resource),
    method: :delete,
    data: { confirm: "Are you sure?" } %></li>
</ul>